@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--
    Namespace: ~/Areas/Identity/Pages/Account/ForgotPasswordConfirmation.cshtml
    Author: Namchok Singhachai
    Description: forgot password confirmation page
-->
<!-- Content -->
<div class="hold-transition login-page">
    <div class="login-box">
        <h3 class="login-box-msg">User Management System</h3>
        <!--Start Card-->
        <div class="card">

            <!--Start Card body-->
            <div class="card-body login-card-body">
                <p>
                    Please check your email to reset your password.
                </p>
                <form method="post">
                    <button type="submit" class="btn btn-primary btn-block">Back</button>
                </form>
            </div>
            <!--End Card body-->

        </div>
        <!--End Card-->
    </div>

    <!--Start Script-->
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <!--End Script-->

</div>
<!-- End Content -->



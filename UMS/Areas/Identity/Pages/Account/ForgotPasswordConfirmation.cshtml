@page
@model ForgotPasswordConfirmation
@{
    /*
        Namespace: ~/Areas/Identity/Pages/Account/ForgotPasswordConfirmation.cshtml
        Author: Namchok Singhachai
        Description: .
    */
    ViewData["Title"] = "Forgot password confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content -->
<div class="hold-transition login-page">
    <div class="login-box">
        <h3 class="login-box-msg text-center">User Management System</h3>
        <!--Start Card-->
        <div class="card">
            <!--Start Card body-->
            <div class="card-body login-card-body text-center">
                <br>
                <i id="checkicon" class="fa fa-check-circle"></i>
                <br><br>
                <h3>Please check your email!</h3>
                <p>We have just sent you a link to reset your password.</p>
                <form method="post">
                    <button type="submit" class="btn btn-secondary btn-block">Back</button>
                </form>
            </div>
            <!--End Card body-->
        </div>
        <!--End Card-->
    </div>
</div>
<!-- End Content -->
<!--Start Script-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<!--End Script-->
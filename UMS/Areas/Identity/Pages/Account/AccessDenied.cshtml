@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<!--
    Namespace: ~/Areas/Identity/Pages/Account/Access Denied.cshtml
    Author: Namchok Singhachai
    Description: Access Denied page
-->
<!-- Content -->
<div class="hold-transition login-page">
    <div class="login-box mx-auto mt-2 mt-lg-3">
        <h2 class="text-danger login-box-msg text-center">@ViewData["Title"]</h2>
        <!--Start Card-->
        <div class="card">
            <!--Start Card body-->
            <div class="card-body login-card-body text-center">
                <br>
                <i id="checkicon" class="fas fa-exclamation-circle text-danger"></i>
                <br><br>
                <h4 class="text-black-50">You do not have access to this site.</h4>
                <!-- Back to home -->
                <form method="post">
                    <button type="submit" class="btn btn-block btn-secondary btn-flat">Back</button>
                </form>
            </div>
            <!--End Card body-->
        </div>
        <!--End Card-->
    </div>
</div>
<!-- End Content -->

<!--Start Script-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<!--End Script-->
<!--Start Style-->
<style>
    .login-box {
        width: 400px;
    }

    #checkicon {
        font-size: 5em;
    }
</style>
<!--End Style-->
@page
@model LoginModel

@{
    ViewData["Title"] = "login";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";

    string nameCookies = LoginModel.StringEncryptor.EncryptString("usermanagementsystem2020", "umsrememberme");
    var cookiesRememberme = HttpContext.Request.Cookies[nameCookies];
    var email = "";
    var pass = "";
    if (cookiesRememberme != null && cookiesRememberme != "")
    {
        email = LoginModel.StringEncryptor.DecryptStringToEmail("usermanagementsystem2020", cookiesRememberme);
        pass = LoginModel.StringEncryptor.DecryptStringToPass("usermanagementsystem2020", cookiesRememberme);
    }
}

<!--
    Namespace: ~/Areas/Identity/Pages/Account/Login.cshtml
    Author: Wannapa Srijermtong
    Description: For login.
-->

<div class="hold-transition login-page">
    <div class="login-box">
        <h3 class="login-box-msg">User Management System</h3>
        <!--Start Card-->
        <div class="card">
            <!--Start Card body-->
            <div class="card-body login-card-body">
                <p class="login-box-msg">Login to start UMS</p>
                <!--Start Form login-->
                <form id="account" method="post">
                    <!--Start Input email-->
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    <div class="input-group mb-3">
                        <input asp-for="Input.Email" id="acc_Email" class="form-control" placeholder="Email" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <!--End Input email-->
                    <!--Start Input password-->
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Input.Password" id="acc_Password" class="form-control" placeholder="Password" />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span id="icon_Password" class="fas fa-eye-slash" style="cursor:pointer" onclick="togglePasword()"></span>
                            </div>
                        </div>
                    </div>
                    <span id="inValidUser" class="text-danger small"></span>
                    <!--End Input password-->
                    <!--Start Hyperlink-->
                    <a href="/Identity/Account/ForgotPassword" class="text-center">I forgot my password</a><br>
                    <a href="/Identity/Account/Register" class="text-center">Register a new membership</a>
                    <!--End Hyperlink-->
                    <div class="row">
                        <!--Start Checkbox remember Me-->
                        <div class="col-8">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" id="RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <!--End Checkbox remember Me-->
                        <!--Start Button login-->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                        <!--Endt Button login-->
                    </div>
                </form>
                <!--End Form login-->
                <!--Start Social media login-->
                <div class="social-auth-links text-center">
                    <p>- OR -</p>
                    <a class="btn btn-block btn-danger" asp-controller="Account" asp-action="GoogleLogin">
                        <i class="fab fa-google-plus mr-2"></i>
                        Login With Google
                    </a>
                    <a class="btn btn-block btn-primary" asp-controller="Account" asp-action="FacebookLogin">
                        <i class="fab fa-facebook mr-2"></i>
                        Login With Facebook
                    </a>
                    <a class="btn btn-block btn-secondary" asp-controller="Account" asp-action="MicrosoftLogin">
                        <i class="fas fa-th-large mr-2"></i>
                        Login With Microsoft
                    </a>
                </div>
                <!--End Social media login-->
            </div>
            <!--End Card body-->
        </div>
        <!--End Card-->
    </div>
</div>
<!--Start Script-->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<script>
    // Check is has exception
    @if (TempData["ExceptionLoggedOut"] != null) { @Html.Raw(TempData["ExceptionLoggedOut"]) /* Swal funciton */ }
    @{ var IsInValid = TempData["ExceptionInValid"] as String;}
    @if (IsInValid == "InValid")
    {
        @Html.Raw("$('#inValidUser').html('Your email or password is not valid.<br>');");
    }else
    {
        @Html.Raw("$('#inValidUser').html('');");
    } // For alert when invalid user
    /*
    * Name: togglePasword()
    * Parameter: none
    * Author: Wannapa Srijermtong
    * Description: For change type of password.
    */
    function togglePasword() {
        var password = document.getElementById("acc_Password") // Get id from input
        if (password.type === "password") {
            document.getElementById("icon_Password").classList.remove('fa-eye-slash')
            document.getElementById("icon_Password").classList.add('fa-eye')
            password.type = "text";
        } else {
            document.getElementById("icon_Password").classList.remove('fa-eye')
            document.getElementById("icon_Password").classList.add('fa-eye-slash')
            password.type = "password";
        }
    } // togglePasword
    $(document).on('click', () => {
        $('#inValidUser').html('');
    })

    $(document).ready(function () {
        @if (TempData["Exception"] != null) { @Html.Raw(TempData["Exception"]) /* Swal funciton */ }
        $('#acc_Email').val(`@(email.ToString())`);
        $('#acc_Password').val(`@(pass.ToString())`);
        if (`@cookiesRememberme.ToString()` != null && `@cookiesRememberme.ToString()` != "") {
            $('#RememberMe').prop('checked', true);
        }
    });
</script>
<!--End Script-->
@using static UMS.Helpers.NavigationIndicatorHelper;
@{
    /*
        Namspace: ~/View/Home/Index.cshtml
        Author: Namchok Singhachai
        Description: The view for home.
    */
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}
<!--Style-->
<style>
    a, a:visited, a:active, a:hover, a:link {
        color: black;
        text-decoration: none;
    }
</style>
<!--End Style-->
<!--Content-->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Web applications</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div class="row justify-content-md-center">
    @if (User.IsInRole("Admin"))
    {
        <div class="col-sm-12 col-md-6 col-lg-6">
            <a asp-controller="ManageUser" asp-action="Index" class="nav-link @Url.MakeActiveClass("ManageUser", "Index")">
                <div class="info-box">
                    <span class="info-box-icon bg-info"><i class="fas fa-user-cog"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">User management</span>
                    </div>
                </div>
            </a>
        </div> <!-- End menu -->
    }
    <div class="col-sm-12 col-md-6 col-lg-6">
        <a asp-controller="Project" asp-action="Index" class="nav-link @Url.MakeActiveClass("Project","Index")">
            <div class="info-box">
                <span class="info-box-icon bg-gradient-blue"><i class="far fa-file"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Project management</span>
                </div>
            </div>
        </a>
    </div> <!-- End menu -->
    @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Support"))
    {
        <div class="col-sm-12 col-md-6 col-lg-6">
            <a asp-controller="ExamplePage" asp-action="Member" class="nav-link @Url.MakeActiveClass("ExamplePage", "Member")">
                <div class="info-box">
                    <span class="info-box-icon bg-gradient-olive"><i class="fas fa-user-check"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Member management</span>
                    </div>
                </div>
            </a>
        </div> <!-- End menu -->
    }
</div>
<!--End Content-->
<script>
    @if (TempData["Exception"] != null) { @Html.Raw(TempData["Exception"]) }; // Check is has exception
    @if (TempData["nullException"] != null) { @Html.Raw(TempData["nullException"]) }; // Check is has exception
</script>
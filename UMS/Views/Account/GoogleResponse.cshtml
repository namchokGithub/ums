@{
    ViewData["Title"] = "Google Response";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--
    Namespace: ~/Views/Account/GoogleResponse.cshtml
    Author: Namchok Singhachai
    Description: Google response page
-->
<!-- Content -->
<div class="hold-transition login-page">
    <div class="login-box mx-auto mt-2 mt-lg-3">
        <h2 class="text-danger login-box-msg text-center">@ViewData["Title"]</h2>
        <!--Start Card-->
        <div class="card">
            <!--Start Card body-->
            <div class="card-body login-card-body text-center">
                <br>
                <i id="checkicon" class="fas fa-exclamation-circle text-danger"></i>
                <br><br>
                    <h4 class="text-black-50">You do not have access to this sitesite.</h4>
                <!-- Back to home -->
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                    <button type="submit" class="btn btn-block btn-default btn-flat">Back</button>
                </form>
            </div>
            <!--End Card body-->
        </div>
        <!--End Card-->
    </div>

    <!--Start Script-->
    @section Scripts {
        <script>
            @if (TempData["Exception"] != null) { @Html.Raw(TempData["Exception"]) /* Swal funciton */ }
        </script>
        <partial name="_ValidationScriptsPartial" />
    }
    <!--End Script-->
    <!--Start Style-->
    <style>
        .login-box {
            width: 400px;
        }

        #checkicon {
            font-size: 5em;
        }
    </style>
    <!--End Style-->

</div>
<!-- End Content -->